function output = findPhaseProfile(npts,optic)

% Variables
lambda = optic.lambda;
diam = optic.diam;
alpha = optic.alpha;

% Laser Parameters
k   = 2*pi/lambda;  % Wavenumber of radiation

% Computation params
r = linspace(0, diam/2 , npts);

if strcmp(optic.type , "axicon")
    phase = -k*sin(alpha)*r;
elseif strcmp(optic.type,"axilens")
    phase = 
else
    disp('Not a valid optic type - get some coffee and try again later');
end
    
    